<?xml version="1.0"?>
<odoo>
    <record id="view_form_record" model="ir.ui.view">
        <field name="name">Record Form</field>
        <field name="model">clean.record</field>
        <field name="arch" type="xml">
            <form string="Record">
                <header>
                    <!-- 此处添加按钮 -->
<!--                    <button name="button_check_isbn" type="object" string="按钮" />-->
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="project" />
                        <field name="cleaner" />
                        <field name="date_published" />
                        <field name="space" />
                        <field name="state" />
                        <field name="rema" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_record" model="ir.ui.view">
        <field name="name">Record List</field>
        <field name="model">clean.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="project" />
                <field name="cleaner" />
                <field name="date_published" />
                <field name="space" />
                <field name="state" />
                <field name="rema" />
            </tree>
        </field>
    </record>

</odoo>