<?xml version="1.0"?>
<odoo>
    <record id="view_form_space" model="ir.ui.view">
        <field name="name">Space Form</field>
        <field name="model">parking.space</field>
        <field name="arch" type="xml">
            <form string="Space">
                <header>
                    <!-- 此处添加按钮 -->
<!--                    <button name="button_check_isbn" type="object" string="统计车位数量" />-->
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="category" />
                        <field name="space" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_space" model="ir.ui.view">
        <field name="name">Space List</field>
        <field name="model">parking.space</field>
        <field name="arch" type="xml">
<!--            <button name="action_confirm_all_sale_ordesar" string="确认" type="action" />-->
            <tree>
                <field name="name" />
                <field name="category" />
                <field name="space" />
            </tree>
        </field>
    </record>

</odoo>