<?xml version="1.0"?>
<odoo>
    <record id="opera_view_form_list" model="ir.ui.view">
        <field name="name">Opera Form</field>
        <field name="model">business.opera.view</field>
        <field name="arch" type="xml">
            <form string="用户信息">
                <sheet>
                    <group>
                        <field name="operaTitle"/>
                        <field name="operaType"/>
                        <field name="operaSummary"/>
                        <field name="operaUser"/>
                        <field name="operaTime"/>
                        <field name="operaWay"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="opera_view_tree_list" model="ir.ui.view">
        <field name="name">Opera List</field>
        <field name="model">business.opera.view</field>
        <field name="arch" type="xml">
            <tree>
                <field name="operaTitle"/>
                <field name="operaType"/>
                <field name="operaSummary"/>
                <field name="operaUser"/>
                <field name="operaTime"/>
                <field name="operaWay"/>
            </tree>
        </field>
    </record>
</odoo>