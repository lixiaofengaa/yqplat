<?xml version="1.0" ?>
<odoo>
    <record id="module_statistics_category" model="ir.module.category" >
        <field name="name">Resource Management</field>
    </record>
<!--    普通用户-->
    <record id="statistics_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_statistics_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
<!--    管理员-->
    <record id="statistics_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_statistics_category" />
        <field name="implied_ids" eval="[(4, ref('statistics_group_user'))]" />
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
    </record>
</odoo>