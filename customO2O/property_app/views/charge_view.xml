<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_form_property_charge" model="ir.ui.view">
            <field name="name">Charge Form</field>
            <field name="model">property.charge</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="type"/>
                            <field name="name"/>
                            <field name="compute"/>
                            <field name="price"/>
                            <field name="style"/>
                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_charge" model="ir.ui.view">
            <field name="name">Charge Tree</field>
            <field name="model">property.charge</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="compute"/>
                    <field name="price"/>
                    <field name="style"/>
                </tree>
            </field>
        </record>
        <record id="view_form_property_charge_pay " model="ir.ui.view">
            <field name="name">Charge Pay Form</field>
            <field name="model">property.charge.pay</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="house"/>
                            <field name="building"/>
                            <field name="home"/>
                            <field name="customer"/>
                            <field name="charge_description"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="money"/>
                            <field name="money_discount"/>
                            <field name="overdue_fine"/>
                            <field name="money_count"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_charge_pay" model="ir.ui.view">
            <field name="name">Charge Pay Tree</field>
            <field name="model">property.charge.pay</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="house"/>
                    <field name="building"/>
                    <field name="home"/>
                    <field name="customer"/>
                    <field name="charge_description"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="money"/>
                    <field name="money_discount"/>
                    <field name="overdue_fine"/>
                    <field name="money_count"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_form_property_charge_payment" model="ir.ui.view">
            <field name="name">Charge Payment Form</field>
            <field name="model">property.charge.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="customer"/>
                            <field name="count"/>
                            <field name="money_other"/>
                            <field name="count_pay"/>
                            <field name="pay_type"/>
                            <field name="state"/>

                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_charge_payment" model="ir.ui.view">
            <field name="name">Charge Payment Tree</field>
            <field name="model">property.charge.payment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="customer"/>
                    <field name="count"/>
                    <field name="money_other"/>
                    <field name="count_pay"/>
                    <field name="pay_type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>