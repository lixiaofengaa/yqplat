<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_form_property_customer" model="ir.ui.view">
            <field name="name">Customer Form</field>
            <field name="model">property.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="family"/>
                            <field name="check_in"/>
                            <field name="estate"/>
                            <field name="carport"/>
                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_customer" model="ir.ui.view">
            <field name="name">Customer Tree</field>
            <field name="model">property.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="estate"/>
                    <field name="carport"/>
                </tree>
            </field>
        </record>

        <record id="view_form_property_estate" model="ir.ui.view">
