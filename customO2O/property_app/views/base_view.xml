                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_form_property_instrument_category" model="ir.ui.view">
            <field name="name">Instrument Category Form</field>
            <field name="model">property.instrument.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="unit"/>
                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_instrument_category" model="ir.ui.view">
            <field name="name">Instrument Category Tree</field>
            <field name="model">property.instrument.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="unit"/>
                </tree>
            </field>
        </record>
