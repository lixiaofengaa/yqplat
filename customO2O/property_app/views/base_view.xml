                            <field name="area"/>
                            <field name="area_inter"/>
                            <field name="area_equal"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                    <chatter>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </chatter>
                </form>
            </field>
        </record>
        <record id="view_tree_property_estate" model="ir.ui.view">
