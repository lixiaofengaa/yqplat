<?xml version="1.0" ?>
<odoo>
    <record id="module_system_category" model="ir.module.category">
        <field name="name">System Management</field>
    </record>
    <!--    普通用户-->
    <record id="system_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_system_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="system_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_system_category"/>
        <field name="implied_ids" eval="[(4, ref('system_group_user'))]"/>
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]"/>
    </record>
</odoo>