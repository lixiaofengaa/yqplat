<?xml version="1.0"?>
<odoo>
    <record id="advert_view_form_list" model="ir.ui.view">
        <field name="name">Advert Form</field>
        <field name="model">business.advert.view</field>
        <field name="arch" type="xml">
            <form string="广告信息">
                <sheet>
                    <group>
                        <field name="advertTitle"/>
                        <field name="advertType"/>
                        <field name="advertSummary"/>
                        <field name="advertUser"/>
                        <field name="advertTime"/>
                        <field name="advertWay"/>
                        <field name="advertEndTime"/>
                        <field name="advertIsTop"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="advert_view_tree_list" model="ir.ui.view">
        <field name="name">Advert List</field>
        <field name="model">business.advert.view</field>
        <field name="arch" type="xml">
            <tree>
                <field name="advertTitle"/>
                <field name="advertType"/>
                <field name="advertSummary"/>
                <field name="advertUser"/>
                <field name="advertTime"/>
                <field name="advertWay"/>
                <field name="advertEndTime"/>
                <field name="advertIsTop"/>
            </tree>
        </field>
    </record>
</odoo>