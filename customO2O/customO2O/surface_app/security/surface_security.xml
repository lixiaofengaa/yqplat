<?xml version="1.0" ?>
<odoo>
    <record id="module_surface_category" model="ir.module.category">
        <field name="name">surface</field>
    </record>

    <!-- surface User Group -->
    <record id="surface_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_surface_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <!-- surface Manager Group -->
    <record id="surface_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_surface_category" />
        <field name="implied_ids" eval="[(4, ref('surface_group_user'))]" />
        <field name="users" eval="[
                    (4, ref('base.user_root')),
                    (4, ref('base.user_admin'))
                ]" />
    </record>

</odoo>