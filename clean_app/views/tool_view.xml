<?xml version="1.0"?>
<odoo>
    <record id="view_form_tool" model="ir.ui.view">
        <field name="name">Tool Form</field>
        <field name="model">clean.tool</field>
        <field name="arch" type="xml">
            <form string="Tool">
                <header>
                    <!-- 此处添加按钮 -->
<!--                    <button name="button_check_isbn" type="object" string="按钮" />-->
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="loss" />
                        <field name="employee" />
                        <field name="state" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_tool" model="ir.ui.view">
        <field name="name">Tool List</field>
        <field name="model">clean.tool</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="loss" />
                <field name="employee" />
                <field name="state" />
            </tree>
        </field>
    </record>

</odoo>